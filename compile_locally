#!/usr/bin/bash
docker start tfg
docker exec tfg sh -c "rm -rf /data/docs/"
docker cp ./docs/ tfg:/data/docs/

docker exec -it --workdir /data/docs tfg sh -c "make web && make pdf"
docker exec tfg sh -c "mv /data/docs/index.html /data/outputs/index.html && mv /data/docs/TFG.pdf /data/outputs/tfg.pdf"

rm -rf ./outputs/
docker cp tfg:/data/outputs/ ./outputs/

